    <Button
        android:id="@+id/tvtraineesubmit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/item_buttonsave"
        android:text="Submit"/>
</LinearLayout>

