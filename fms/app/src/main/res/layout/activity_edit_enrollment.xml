<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    tools:context=".Activity.EditEnrollmentActivity">
    <TextView
        android:id="@+id/tvEnrollment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/leaguegothic_regular"
        android:gravity="center"
        android:text="Edit Enrollment"
        android:textColor="@color/black"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/tvTraineeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="TraineeID:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtTraineeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_cust1"
        android:hint="TraineeId"
        android:fontFamily="@font/times_newroman"
        android:textStyle="bold"
        android:textColor="#000000"
        android:enabled="false"
        android:padding="15dp" />

    <TextView
        android:id="@+id/tvTraineeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="TraineeName:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtTraineeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_cust1"
        android:hint="TraineeName"
        android:textStyle="bold"
        android:textColor="#000000"
        android:enabled="false"
        android:fontFamily="@font/times_newroman"
        android:padding="15dp" />



    <TextView
        android:id="@+id/tvClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="ClassName:"
        android:textColor="@color/black"
        android:textSize="18dp"

        android:textStyle="bold" />


    <Spinner
        android:layout_marginTop="5dp"
        android:id="@+id/spnClassName"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/times_newroman"
            android:background="@drawable/item_buttonsave"
            android:text="Save"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:fontFamily="@font/times_newroman"
            android:background="@drawable/item_buttoncancel"
            android:text="Back"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>