<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:gravity="center"
    android:layout_height="350dp">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/warning2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/times_newroman"
        android:text="Are You Sure?"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tvDelEnrollment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Class is not over. Do you want to remove the trainee from the classroom?"
        android:textSize="24dp"
        android:fontFamily="@font/times_newroman"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_buttonsave"
            android:fontFamily="@font/times_newroman"
            android:text="Yes!"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/btn_Cancel"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_buttoncancel"
            android:fontFamily="@font/times_newroman"
            android:text="Cancel!" />

    </LinearLayout>

</LinearLayout>