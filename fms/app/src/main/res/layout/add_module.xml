<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Moude List"
                android:textColor="#030007"
                android:textSize="40dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Module Name"
                android:textColor="#030007"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/etModuleName"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_cust"
                android:hint="Enter your name"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvcheckModuleName"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Start Date"
                android:textColor="#030007"
                android:textSize="20dp"/>
            <LinearLayout
                android:id="@+id/linStartDate1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_cust"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvStartDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="mm/dd/yyyy"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconlich" />

            </LinearLayout>
            <TextView
                android:id="@+id/tvCheckStartdate"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="End Date"
                android:textColor="#030007"
                android:textSize="20dp"/>
            <LinearLayout
                android:id="@+id/linEndDate1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_cust"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvEndDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="mm/dd/yyyy"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ima2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconlich" />

            </LinearLayout>
            String ModuleName = "Please enter Module name and less than 255 character";
            <TextView
                android:id="@+id/tvCheckEnddate"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="match_parent">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Admin ID"
                android:textColor="#030007"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_cust">

                <Spinner
                    android:id="@+id/spnAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#070707" />

            </LinearLayout>
            <TextView
                android:id="@+id/tvSpiner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FeedBack Title"
                android:textColor="#030007"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_cust">
                <Spinner
                    android:id="@+id/spnFBtitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#070707"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvCheckFBtitle"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FeedBack Start Date"
                android:textColor="#030007"
                android:textSize="20dp"
                />
            <LinearLayout
                android:id="@+id/linFBStartDate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_cust"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFBStartDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="mm/dd/yyyy"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ima3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconlich" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvCheckFBstartdate"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FeedBack End Date"
                android:textColor="#030007"
                android:textSize="20dp"
                />
            <LinearLayout
                android:id="@+id/linFBEndDate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_cust"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFBSEndDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="mm/dd/yyyy"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ima4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconlich" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvCheckFBenddate"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="right">

            <Button
                android:id="@+id/btnSaveModule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:textColor="#ffff"
                android:text="Save"
                android:background="#5F78FF"
                />
            <Button
                android:id="@+id/btnBackModule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffff"
                android:text="Back"
                android:background="#FF3C3C"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>