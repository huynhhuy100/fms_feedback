<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.EditAssignmentActivity">

    <TextView
        android:id="@+id/tvUpdateTitleAsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/leaguegothic_regular"
        android:gravity="center"
        android:text="Edit Assignment"
        android:textColor="@color/black"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/tv_asmUpdateClassId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="Class Id:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edt_asmUpdateClassId"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/boder_text"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/tv_asmUpdateClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="Class Name:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edt_asmUpdateClassName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/boder_text"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/tv_asmUpdateModuleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="Module Id:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edt_asmUpdateModuleId"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/boder_text"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/tv_asmUpdateModuleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="Module Name:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edt_asmUpdateModuleName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/boder_text"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/tv_asmUpdateTrainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/times_newroman"
        android:gravity="center"
        android:text="Trainer Name"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spn_asmUpdateTrainerName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:background="@drawable/spinner_border"
        android:fontFamily="@font/leaguegothic_regular"
        android:spinnerMode="dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="right|center">

        <Button
            android:id="@+id/btn_saveEditASM"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/times_newroman"
            android:textStyle="normal"
            android:background="@drawable/btnsaveasm"
            android:text="Save"/>

        <Button
            android:id="@+id/btn_backEditASM"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/times_newroman"
            android:textStyle="normal"
            android:background="@drawable/btnbackasm"
            android:text="Back"/>

    </LinearLayout>

</LinearLayout>